{
  "name": "@sozialhelden/core",
  "version": "2.2.0",
  "description": "Core utilities shared by different sozialhelden projects",
  "author": "Sozialhelden e.V. <developers@sozialhelden.de>",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "build": "rimraf dist && vite build",
    "lint": "npx biome lint",
    "lint:fix": "npx biome lint --write",
    "format": "npx biome format",
    "format:fix": "npx biome format --write",
    "release": "semantic-release"
  },
  "dependencies": {
    "@mapbox/maki": "^8.2.0",
    "@sozialhelden/ietf-language-tags": "^5.4.2"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/react": "19.1.5",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.5",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.1.4"
  }
}
